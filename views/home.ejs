<%- include("./partials/header") %>

<!-- Header -->
<header class="bg-primary py-5 mb-5">
  <div class="container h-100">
    <div class="row h-100 align-items-center">
      <div class="col-lg-12">
        <h1 class="display-4 text-white mt-5 mb-2">Insta Clone</h1>
      </div>
    </div>
  </div>
</header>

<!-- Page Content -->
<div class="container">
  <div class="row">
    <div class="col-md-12 mb-5">
      <h2>What We Do</h2>
      <hr />
      <p>
        Insta Clone is an simplified version of Instagram where users can post
        pictures, leave comments and communicate with their friends.
      </p>
      <a class="btn btn-primary btn-lg" href="users/login"
        >Get Started &raquo;</a
      >
    </div>
  </div>
  <!-- /.row -->

  <div class="row">
    <div class="col-md-4 mb-5">
      <div class="card h-100">
        <img class="card-img-top" src="../public/images/photos.jpg" alt="" />
        <div class="card-body">
          <h4 class="card-title">Post Photos</h4>
          <p class="card-text">
            Your photos will come up on your profile and on your friends'
            newsfeed.
          </p>
        </div>
        <div class="card-footer">
          <a href="#" class="btn btn-primary">Find Out More!</a>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-5">
      <div class="card h-100">
        <img class="card-img-top" src="../public/images/comments.jpg" alt="" />
        <div class="card-body">
          <h4 class="card-title">Leave Comments</h4>
          <p class="card-text">
            Leave comments on photos.
          </p>
        </div>
        <div class="card-footer">
          <a href="#" class="btn btn-primary">Find Out More!</a>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-5">
      <div class="card h-100">
        <img class="card-img-top" src="../public/images/follow.jpg" alt="" />
        <div class="card-body">
          <h4 class="card-title">Follow your friends</h4>
          <p class="card-text">
            Follow your friends and get updates on your newsfeed.
          </p>
        </div>
        <div class="card-footer">
          <a href="#" class="btn btn-primary">Find Out More!</a>
        </div>
      </div>
    </div>
  </div>
  <!-- /.row -->
</div>

<%- include("./partials/footer") %>
